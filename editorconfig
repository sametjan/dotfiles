# Root editorconfig file
#
# should be symlinked to $HOME/.editorconfig to ensure
# it is used as the default
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx}]
charset = utf-8
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.el]
indent_style = space
max_line_length = 80